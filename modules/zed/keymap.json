[
  {
    "context": "GitPanel",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-f": "git::Fetch",
      "shift-p": "git::Push",
      "ctrl-p": "git::Pull",
      "ctrl-shift-p": "git::ForcePush",
      "ctrl-d": "git::Diff",
      "ctrl-g backspace": "git::RestoreTrackedFiles",
      "ctrl-g shift-backspace": "git::TrashUntrackedFiles",
      "ctrl-a": "git::StageAll",
      "ctrl-shift-a": "git::UnstageAll"
    }
  },
  {
    "context": "FileFinder || Picker",
    "bindings": {
      "ctrl-w": "menu::SelectPrevious",
      "ctrl-s": "menu::SelectNext"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-w": "editor::ContextMenuPrevious",
      "ctrl-s": "editor::ContextMenuNext"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-a": "project_panel::NewFile",
      "ctrl-shift-a": "project_panel::NewDirectory",
      "l": "project_panel::OpenPermanent"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-m": "diagnostics::Deploy"
    }
  },
  {
    "context": "Editor && extension==md",
    "bindings": {
      "ctrl-m": "markdown::OpenPreviewToTheSide"
    }
  }
]
